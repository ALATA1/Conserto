    agent any

    stages {
        stage('Tests') {
            steps {
                bat 'pip install -r requirements.txt'
                bat 'robot   --output Logs/output.xml   --log Logs/log.html   --report Logs/report.html   Tests/TestSuites/Conserto/conserto_1.robot'
            }
        }
    }
}
